{
  "name": "@vela/app",
  "version": "0.0.1",
  "description": "Vela Japanese Learning App",
  "productName": "Vela",
  "author": "cwchanap <cwchanap@connect.ust.hk>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint \"./src/**/*.{ts,js,vue}\"",
    "lint:fix": "eslint \"./src/**/*.{ts,js,vue}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path ../../.gitignore",
    "test": "playwright test",
    "test:unit": "quasar test -u",
    "test:e2e": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "dev": "quasar dev",
    "build": "quasar build",
    "postinstall": "quasar prepare"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.666.0",
    "@aws-sdk/lib-dynamodb": "^3.666.0",
    "@quasar/extras": "^1.16.4",
    "aws-amplify": "^6.15.5",
    "pinia": "^2.1.7",
    "quasar": "^2.16.0",
    "vue": "^3.4.18",
    "vue-router": "^4.3.0",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@quasar/app-vite": "^2.1.0",
    "@quasar/quasar-app-extension-testing": "^2.2.0",
    "@types/node": "^20.5.9",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.2",
    "jsdom": "^26.1.0",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.9.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
