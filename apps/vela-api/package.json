{
  "name": "vela-api",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun --watch src/index.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/index.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name vela-api",
    "deploy": "run-s build zip update",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\" --ignore-path ../../.gitignore",
    "test": "bun run test:unit",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.143",
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.21.4",
    "nodemon": "^3.1.10",
    "npm-run-all2": "^6.2.0",
    "vite": "^7.1.5",
    "vitest": "^1.6.0",
    "@types/pg": "8.15.6"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.886.0",
    "@aws-sdk/client-dynamodb": "^3.886.0",
    "@aws-sdk/client-s3": "^3.917.0",
    "@aws-sdk/lib-dynamodb": "^3.886.0",
    "@aws-sdk/s3-request-presigner": "^3.917.0",
    "@hono/zod-validator": "^0.7.2",
    "aws-jwt-verify": "^5.1.1",
    "hono": "^4.9.5",
    "zod": "^4.1.5",
    "@aws/aurora-dsql-node-postgres-connector": "0.1.1",
    "@aws-sdk/credential-providers": "3.940.0",
    "@aws-sdk/dsql-signer": "3.940.0",
    "pg": "8.16.3"
  }
}
