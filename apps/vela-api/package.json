{
  "name": "vela-api",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun run src/dev.ts",
    "build": "NODE_ENV=production bun build src/index.ts --outdir dist --target bun --minify --sourcemap",
    "test": "bun run test:unit",
    "test:unit": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "compile": "tsc --noEmit",
    "postinstall": "bun run compile"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "1.1.10",
    "hono": "^4.6.4",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.886.0",
    "@aws-sdk/client-dynamodb": "^3.886.0",
    "@aws-sdk/client-s3": "^3.917.0",
    "@aws-sdk/lib-dynamodb": "^3.886.0",
    "@aws-sdk/s3-request-presigner": "^3.917.0",
    "@hono/zod-validator": "^0.7.2",
    "aws-jwt-verify": "^5.1.1",
    "hono": "^4.9.5",
    "zod": "^4.1.5",
    "@aws/aurora-dsql-node-postgres-connector": "0.1.1",
    "@aws-sdk/credential-providers": "3.940.0",
    "@aws-sdk/dsql-signer": "3.940.0",
    "pg": "8.16.3"
  }
}
