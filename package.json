{
  "name": "vela",
  "version": "0.0.1",
  "description": "A Quasar Project",
  "productName": "Vela",
  "author": "cwchanap <cwchanap@connect.ust.hk>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"No test specified\" && exit 0",
    "dev:wrangler": "wrangler dev --port 9001",
    "dev": "quasar dev",
    "build": "quasar build",
    "postinstall": "quasar prepare",
    "prepare": "husky",
    "worker:deploy": "wrangler deploy",
    "ddb:up": "docker compose up -d dynamodb",
    "ddb:down": "docker compose down",
    "ddb:init": "node ./scripts/create-ddb-tables.mjs"
  },
  "dependencies": {
    "@quasar/extras": "^1.16.4",
    "@supabase/supabase-js": "^2.52.1",
    "pinia": "^2.1.7",
    "quasar": "^2.16.0",
    "vue": "^3.4.18",
    "vue-router": "^4.3.0",
    "vuedraggable": "^4.1.0",
    "@aws-sdk/client-dynamodb": "^3.666.0",
    "@aws-sdk/lib-dynamodb": "^3.666.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.11.6",
    "@cloudflare/workers-types": "^4.20250204.0",
    "@eslint/js": "^9.14.0",
    "@quasar/app-vite": "^2.1.0",
    "@types/node": "^20.5.9",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "autoprefixer": "^10.4.2",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.3.3",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.9.0",
    "vue-tsc": "^2.0.29",
    "wrangler": "^3.75.0"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,json,md}": [
      "prettier --write"
    ]
  }
}
