{
  "name": "vela-monorepo",
  "version": "0.0.1",
  "description": "Vela monorepo with app and infrastructure",
  "author": "cwchanap <cwchanap@connect.ust.hk>",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "dev:vela-ext": "turbo run dev --filter=./apps/vela-ext",
    "build:vela-ext": "turbo run build --filter=./apps/vela-ext",
    "zip:vela-ext": "turbo run zip --filter=./apps/vela-ext",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "turbo format",
    "test": "turbo test",
    "clean": "turbo clean",
    "cdk:synth": "turbo cdk:synth",
    "cdk:deploy": "turbo cdk:deploy",
    "cdk:diff": "turbo cdk:diff",
    "cdk:destroy": "turbo cdk:destroy",
    "build:production": "pnpm --filter @vela/cdk run build:frontend",
    "prepare": "husky"
  },
  "devDependencies": {
    "turbo": "^2.1.3",
    "prettier": "^3.3.3",
    "@eslint/js": "^9.14.0",
    "@types/node": "^20.5.9",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "~5.5.3"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "pnpm": ">= 9.0.0"
  },
  "packageManager": "pnpm@9.12.1",
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,json,md}": [
      "prettier --write"
    ]
  }
}
