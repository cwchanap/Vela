{
  "name": "@vela/cdk",
  "version": "0.0.1",
  "description": "Vela AWS CDK Infrastructure",
  "author": "cwchanap <cwchanap@connect.ust.hk>",
  "private": true,
  "scripts": {
    "build": "pnpm run lambda:build",
    "lambda:build": "esbuild ../../apps/vela-api/src/index.ts --bundle --outfile=dist/lambda/index.js --platform=node --target=node20 --format=cjs --external:@aws-sdk/*",
    "cdk:synth": "pnpm dlx aws-cdk synth",
    "cdk:deploy": "pnpm dlx aws-cdk deploy",
    "cdk:destroy": "pnpm dlx aws-cdk destroy",
    "cdk:diff": "pnpm dlx aws-cdk diff",
    "get-outputs": "aws cloudformation describe-stacks --stack-name VelaStack --query 'Stacks[0].Outputs' --output json > cdk-outputs.json",
    "build:frontend": "pnpm run get-outputs && tsx scripts/inject-env.ts && pnpm --filter @vela/app run build",
    "lint": "eslint \"**/*.{ts,js}\"",
    "lint:fix": "eslint \"**/*.{ts,js}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\" --ignore-path ../../.gitignore"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.666.0",
    "@aws-sdk/client-dynamodb": "^3.666.0",
    "@aws-sdk/lib-dynamodb": "^3.666.0",
    "@hono/zod-validator": "^0.7.2",
    "hono": "^4.9.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^24.3.0",
    "aws-cdk": "^2.172.0",
    "aws-cdk-lib": "^2.172.0",
    "constructs": "^10.4.2",
    "esbuild": "^0.21.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "~5.5.3"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4"
  }
}
