{
  "name": "@vela/cdk",
  "version": "0.0.1",
  "description": "Vela AWS CDK Infrastructure",
  "author": "cwchanap <cwchanap@connect.ust.hk>",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run lambda:build",
    "lambda:build": "tsc lambda/index.ts --outDir dist/lambda --target ES2020 --module commonjs --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "cdk:synth": "npx cdk synth",
    "cdk:deploy": "npx cdk deploy",
    "cdk:destroy": "npx cdk destroy",
    "cdk:diff": "npx cdk diff",
    "lint": "eslint \"**/*.{ts,js}\"",
    "lint:fix": "eslint \"**/*.{ts,js}\" --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\" --ignore-path ../../.gitignore"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.666.0",
    "@aws-sdk/lib-dynamodb": "^3.666.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/node": "^20.5.9",
    "aws-cdk": "^2.172.0",
    "aws-cdk-lib": "^2.172.0",
    "constructs": "^10.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "~5.5.3"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4"
  }
}
